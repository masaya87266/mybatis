        <!ELEMENT configuration (environment?, mappers?)>

        <!ELEMENT property EMPTY>
        <!ATTLIST property name CDATA #REQUIRED value CDATA #REQUIRED>

        <!ELEMENT environment (dataSource+)>
        <!ATTLIST environment default CDATA #REQUIRED>

        <!ELEMENT dataSource (property*)>
        <!ATTLIST dataSource id CDATA #REQUIRED>

        <!ELEMENT mappers (mapper*)>

        <!ELEMENT mapper EMPTY>
        <!ATTLIST mapper resource CDATA #IMPLIED>

        <!ELEMENT package EMPTY>
        <!ATTLIST package name CDATA #REQUIRED>